<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" href="/img/svg/navigate-circle-outline.svg">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <title>login</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            background-color: black;
        }

        .login-plane {
            /* background: rgba(163, 163, 163, 0.2); */
            background: rgba(37, 37, 37, 0.8);
            width: 400px;
            height: 340px;
            border-radius: 25px;
            padding: 20px 10px;
            position: relative;
            margin: 0 auto;
            top: 20vh;
            /* transition: all 0.8s; */
        }

        .login-plane:hover {
            box-shadow: -15px 25px 20px 10px rgba(0, 0, 0, 0.5);
        }

        #title {
            position: relative;
            text-align: center;
            font-size: 25px;
            color: whitesmoke;
            text-shadow: -10px 15px 5px rgba(0, 0, 0, 0.6);
            transition: all 0.5s;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
        }


        .content {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .content div {
            width: 300px;
            height: 70px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .content input {
            width: 210px;
            height: 35px;
            border-radius: 10px;
            text-align: center;
            font-size: 17px;
            margin-top: 15px;
            border: none;
            outline-color: rgba(135, 207, 235, 0.4);
            transition: all 0.5s;
            outline: none;
        }

        .content button {
            width: 80px;
            height: 30px;
            margin: 20px;
            border-radius: 10px;
            border: none;
            font-size: 16px;
            color: whitesmoke;
            background-color: rgb(47, 144, 185);
            font-weight: 500;
            box-shadow: 5px 5px 5px 5px rgba(0, 29, 41, 0.5);
            transition: all 0.5s;
            outline: none;
        }

        .content button:hover {
            background-color: rgba(241, 214, 90, 0.527);
            box-shadow: 5px 5px 5px 5px rgba(168, 143, 28, 0.3) inset;
            transform: scale(1.2);
        }

        .content input:hover {
            transform: scale(1.1);
        }

        .back {
            height: 100vh;
            overflow-y: hidden;
            position: absolute;
            width: 100%;
        }

        .back img {
            width: 100%;
            height: 100%;
            opacity: 0.5;
        }

        #title a {
            text-decoration: none;
            color: #fff;
            padding: 0px 5px;
            transition: transform 0.3s linear;
        }

        #title a:hover {
            color: rgb(0, 204, 255);
            text-shadow: 0px 0px 10px rgb(47, 179, 255);
            transform: scale(1.3);
        }

        .message {
            position: fixed;
            z-index: 100;
            width: 100%;
            height: 50px;
            display: flex;
            background-color: rgba(136, 136, 136, 0.25);
            align-items: center;
            justify-content: center;
            font-size: 20px;
            transition: all 1s;
            color: whitesmoke;
            font-weight: bold;
            opacity: 0;
        }

        div.icon ion-icon {
            z-index: 10;
            color: rgba(245, 245, 245, 0.651);
            font-size: 40px;
            position: absolute;
            left: 10%;
        }

        @media (max-width:1500px) {
            .back img {
                width: 100%;
                height: 100vh;
                opacity: 0.5;
            }

            .login-plane {
                width: 300px;
                height: 330px;
                top: 100px;
            }
        }
    </style>
</head>

<body>
    <div class="message">ERROR</div>
    <div class="back">
        <img src="../img/bg/bg3.jpg" alt="1">
    </div>
    <!-- login -->
    <div class="login-plane">
        <div class="icon">
            <a href="javascript:void(0);" onclick="SunDay()">
                <ion-icon id="moon" name="moon-outline"></ion-icon>
                <ion-icon id="sun" name="sunny-outline"></ion-icon>
            </a>
        </div>
        <h1 id="title" class="login-title">登录 <a href="/index">Go Trip</a></h1>
        <br>
        <div class="content">
            <form action="/index" method="post" onsubmit="return SubmitTo()">
                <div>
                    <!-- <label for="userphone">手机号</label>-->
                    <input id="phone" type="text" name="userphone" placeholder="手机号">
                </div>
                <div>
                    <!-- <label for="password">密码</label>                     -->
                    <input id="password" type="text" name="password" placeholder="密码~6">
                </div>
                <div>
                    <!-- 用户名 -->
                    <input id="username" type="text" name="username" placeholder="用户名~5" maxlength="5">
                </div>
                <div>
                    <button onblur="setFrame()" type="submit" onclick="SubmitTo()">登录/注册</button>
                    <!-- <button type="button" disabled title="未开发">注册</button> -->
                </div>
            </form>
        </div>
    </div>

    <script>
        var error = document.querySelector(".message");

        const phoneReg = /^1[3-9]\d{9}$/;
        const passwordReg = /^[a-zA-Z0-9]{6}$/;

        function setFrame()
        {
            error.style.opacity = 0;
        }
        function SubmitTo()
        {
            var phone = document.getElementById("phone");
            var password = document.getElementById("password");
            var name = document.getElementById("username");

            var isPhone = phoneReg.test(phone.value);
            var isPass = passwordReg.test(password.value)

            if (!isPhone)
            {
                error.style.opacity = 1;
                error.innerHTML = "手机号不正确";
                return false;
            }
            if (!isPass)
            {
                error.style.opacity = 1;
                error.innerHTML = "密码不正确";
                return false;
            }
            if (name.value.trim() === "")
            {
                error.style.opacity = 1;
                error.innerHTML = "用户名不能为空 ";
                return false;
            }
            return true;

            console.log(isPhone);
            console.log(isPass);
        }

        var isDrak = true;
        SunDay();
        function SunDay()
        {
            var sun = document.getElementById("sun");
            var moon = document.getElementById("moon");
            var plane = document.querySelector(".login-plane");
            var title = document.getElementById("title");

            sun.style.display = "none";

            if (isDrak)
            {
                console.log(isDrak);
                sun.style.display = "block";
                moon.style.display = "none";
                plane.style.background = "rgba(160, 160, 160, 0.2)";

                title.style.textShadow = "-10px 15px 10px rgba(0, 0, 0, 0.8)";
            }
            else
            {
                console.log(isDrak);
                moon.style.display = "block";
                sun.style.display = "none";
                plane.style.background = "rgba(37, 37, 37, 0.4)";

                title.style.textShadow = "-10px 15px 10px rgba(0, 0, 0, 0)";
            }
            isDrak = !isDrak;
        }

    </script>
</body>

</html>